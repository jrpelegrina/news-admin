<header class="modal-header">
    <h1>{{t "Are you sure you want to delete this member?"}}</h1>
</header>
<a class="close" href="" title="{{t "common.Close"}}" {{action "closeModal"}}>{{svg-jar "close"}}<span class="hidden">{{t "common.Close"}}</span></a>

<div class="modal-body">
    <p>
        {{{t "You're about to delete \"<strong>{user}</strong>\". This is permanent! We warned you, k?" user=(or this.member.name this.member.email)}}}
    </p>
</div>

<div class="modal-footer">
    <button {{action "closeModal"}} class="gh-btn"><span>{{t "common.Cancel"}}</span></button>
    <GhTaskButton @buttonText={{t "taskButton.Delete"}} @successText={{t "taskButton.Deleted"}} @task={{this.deleteMember}} @class="gh-btn gh-btn-red gh-btn-icon" />
</div>