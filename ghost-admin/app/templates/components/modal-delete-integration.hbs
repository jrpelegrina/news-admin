<header class="modal-header">
    <h1>{{t "Are you sure?"}}</h1>
</header>
<a class="close" href="" title="{{t "common.Close"}}" {{action "closeModal"}}>{{svg-jar "close"}}<span class="hidden">{{t "common.Close"}}</span></a>
<div class="modal-body">
    <p>
        {{t "Deleting this integration will remove all webhooks and api keys associated with it."}}
    </p>
</div>
<div class="modal-footer">
    <button {{action "closeModal"}} class="gh-btn"><span>{{t "common.Cancel"}}</span></button>
    <GhTaskButton
        @buttonText={{t "taskButton.Delete Integration"}}
        @successText={{t "taskButton.Deleted"}}
        @task={{this.deleteIntegration}}
        @class="gh-btn gh-btn-red gh-btn-icon" />
</div>
